<?xml version="1.0" encoding="UTF-8"?>
<Addin id="com.ivokrugers.essentialsaddin">
	<Header>
		<Name>Essentials Addin</Name>
		<Description>Essentials Addin provides several pads and other functionalities. 
            
Funtionality summary: 
- Solution Tree filtering (Pad)
	- Filter project to Expand.
	- Take into account pinned tabs when filtering solution tree.
	- Pin files in Solution Tree via Context Menu
	- Store filter and pinned files per solution and git branch

- One click to open file functionality.

- Menu: Copy Git Url of selected files. This works for GitHub and Azure DevOps.

- Filter Application Output in a new Pad

The pads can be opened from the View-Pads or Tools menu.

by Ivo Krugers</Description>
		<Author>Ivo Krugers</Author>
		<Copyright>Ivo Krugers</Copyright>
		<Url>https://github.com/IvoKrugers/EssentialsAddin</Url>
		<UpdateRank>Important</UpdateRank>
	</Header>

	<!--<Runtime>
		<Import assembly="EssentialsAddin.dll" />
	</Runtime>-->

	<!-- Commands -->
	<Extension path="/MonoDevelop/Ide/Commands">
		<Command id="EssentialsAddin.AddinCommands.ShowSolutionFilterPad"
				_label="Solution Filter Pad"
				defaultHandler="EssentialsAddin.CommandHandlers.SolutionFilterPadMenuHandler" />

		<Command id="EssentialsAddin.AddinCommands.ShowAppOutputFilterPad"
				_label="Output Filter Pad"
				defaultHandler="EssentialsAddin.CommandHandlers.AppOutputFilterPadMenuHandler" />

		<Command id="EssentialsAddin.AddinCommands.CurrentVersion"
				_label="Essentials (x.x.x)"
				defaultHandler="EssentialsAddin.CommandHandlers.CurrentVersionMenuHandler" />

		<Command id = "EssentialsAddin.SolutAddinCommandsionFilter.FileNodeContextMenuPin"
				_label = "pin/unpin"
				defaultHandler="EssentialsAddin.CommandHandlers.FileNodeContextMenuPinCommandHandler"/>

		<Command id = "EssentialsAddin.AddinCommands.EditorContextMenuPin"
				_label = "pin/unpin"
				defaultHandler="EssentialsAddin.CommandHandlers.EditorContextMenuPinCommandHandler"/>

		<Command id = "EssentialsAddin.AddinCommands.FileNodeContextMenuUnPinAll"
				_label = "Reset pinned documents"
				defaultHandler="EssentialsAddin.CommandHandlers.FileNodeContextMenuUnPinAllCommandHandler"/>

		<Command id = "EssentialsAddin.AddinCommands.GitHubUrlForLine"
				_label = "Copy Git Url for selected line(s)"
				defaultHandler="EssentialsAddin.CommandHandlers.GitUrlForLineCommandHandler"/>

		<Command id="EssentialsAddin.AddinCommands.TEST"
				_label="TEST"
				defaultHandler="EssentialsAddin.CommandHandlers.TestHandler" />
	</Extension>

	<!-- ProjectPad NodeBuilders -->
	<Extension path="/MonoDevelop/Ide/Pads/ProjectPad">
		<NodeBuilder class="EssentialsAddin.SolutionFilter.FileNodeBuilderExtension" />
		<NodeBuilder class="EssentialsAddin.SolutionFilter.SpecialNodeBuilderExtension" />
	</Extension>

	<Extension path = "/MonoDevelop/TextEditor/ContextMenu/Editor">
		<Condition id="FileType" fileExtensions=".cs">
			<CommandItem id="EssentialsAddin.AddinCommands.CurrentVersion"/>
			<!--<CommandItem id="EssentialsAddin.AddinCommands.TEST" />-->
			<CommandItem id="EssentialsAddin.AddinCommands.GitHubUrlForLine"/>
			<CommandItem id="EssentialsAddin.AddinCommands.EditorContextMenuPin"/>
			<SeparatorItem id="EssentialsSeparator3" />
		</Condition>
	</Extension>
	<!--<Extension path = "/MonoDevelop/TextEditor/ContextMenu/Fsi">
		<Condition id="FileType" mimeTypes="text/x-csharp">
			<CommandItem id="EssentialsAddin.AddinCommands.TEST" />
			<CommandItem id="EssentialsAddin.AddinCommands.TEST1" />
			<CommandItem id="EssentialsAddin.AddinCommands.TEST2" />
		</Condition>
	</Extension>-->

	<!-- ProjectPad Node ContextMenu Entries -->
	<Extension path = "/MonoDevelop/Ide/ContextMenu/ProjectPad">
		<Condition id="ItemType" value="MonoDevelop.Projects.ProjectFile">
			<CommandItem id="EssentialsAddin.AddinCommands.CurrentVersion"/>
            <CommandItem id = "EssentialsAddin.AddinCommands.FileNodeContextMenuPin"/>
			<CommandItem id = "EssentialsAddin.AddinCommands.FileNodeContextMenuUnPinAll"/>
        </Condition>
		<!--<Condition id="ItemType" value="Solution">
            <CommandItem id = "EssentialsAddin.SolutionFilter.FileNodeContextMenuUnPinAll"/>
        </Condition>
		<Condition id="ItemType" value="Project">
            <CommandItem id = "EssentialsAddin.SolutionFilter.FileNodeContextMenuUnPinAll"/>
        </Condition>
		<Condition id="ItemType" value="Folder">
            <CommandItem id = "EssentialsAddin.SolutionFilter.FileNodeContextMenuUnPinAll"/>
        </Condition>-->
    </Extension>

	<!-- Main Tool Menu Entries -->
	<Extension path="/MonoDevelop/Ide/MainMenu/Tools">
		<SeparatorItem id="EssentialsSeparator" />
		<CommandItem id="EssentialsAddin.AddinCommands.CurrentVersion" />
		<ItemSet _label="Links">
			<LinkItem _label="Github (https://github.com/IvoKrugers/EssentialsAddin)" link="https://github.com/IvoKrugers/EssentialsAddin/" />
			<LinkItem _label="LinkedIn (https://www.linkedin.com/in/ikrugers/)" link="https://www.linkedin.com/in/ikrugers/" />
		</ItemSet>
		<ItemSet _label="Pads">
			<CommandItem id="EssentialsAddin.AddinCommands.ShowSolutionFilterPad" />
			<CommandItem id="EssentialsAddin.AddinCommands.ShowAppOutputFilterPad" />
		</ItemSet>
		<CommandItem id="EssentialsAddin.AddinCommands.GitHubUrlForLine" />
		<SeparatorItem id="EssentialsSeparator2" />
	</Extension>

	<!-- Pads -->
	<Extension path="/MonoDevelop/Ide/Pads">
		<Pad id="EssentialsAddin.SolutionFilterPad" _label="Solution Filter" class="EssentialsAddin.SolutionFilterPad" defaultStatus="Dockable" defaultPlacement="ProjectPad/bottom" />
		<Pad id="EssentialsAddin.OutputFilterPad" _label="Filtered Application Output" class="EssentialsAddin.OutputFilterPad" defaultStatus="Dockable" defaultPlacement="OutputPad/Right" />
	</Extension>
</Addin>